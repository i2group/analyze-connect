{
  "schemaShortName": "ERI-Reports",
  "schemaUrl": "/schema",
  "chartingSchemesUrl": "/charting-schemes",
  "defaultValues": {
    "timeZoneId": "Europe/London",
    "resultIdsPersistent": true
  },
  "services": [
    {
      "id": "eri-service",
      "name": "ERI Connector: All Data",
      "description": "A service which retrieves all data.",
      "clientConfigType": "NONE",
      "acquireUrl": "/all"
    },
    {
      "id": "eri-search-service",
      "name": "ERI Connector: Search",
      "description": "A service for conditional searches.",
      "clientConfigType": "FORM",
      "clientConfigId": "searchForm",
      "acquireUrl": "/search"
    },
    {
      "id": "eri-find-like-this-incident-service",
      "name": "ERI Connector: Find-Like-This Incident",
      "description": "A service which finds a similar incident.",
      "clientConfigType": "NONE",
      "acquireUrl": "/find-like-this-incident",
      "seedConstraints": {
        "min": 1,
        "max": 1,
        "seedTypes": {
          "allowedTypes": "ENTITY",
          "itemTypes": [
            {
              "id": "ET1",
              "min": 1,
              "max": 1
            }
          ]
        }
      }
    },
    {
      "id": "eri-expand-service",
      "name": "ERI Connector: Expand",
      "description": "A service which executes an expand operation on a seed",
      "clientConfigType": "NONE",
      "acquireUrl": "/expand",
      "seedConstraints": {
        "min": 1,
        "max": 1,
        "seedTypes": {
          "allowedTypes": "ENTITY",
          "itemTypes": [
            {
              "id": "ET1"
            }
          ]
        }
      }
    }
  ],
  "clientConfigs": [
    {
      "id": "searchForm",
      "config": {
        "sections": [
          {
            "conditions": [
              {
                "id": "incident_type",
                "label": "Incident Type",
                "logicalType": "SELECTED_FROM",
                "possibleValues": [
                  {
                    "value": "Administration"
                  },
                  {
                    "value": "Aviation"
                  },
                  {
                    "value": "Fire"
                  },
                  {
                    "value": "HazMat"
                  },
                  {
                    "value": "Law Enforcement"
                  },
                  {
                    "value": "Marine"
                  },
                  {
                    "value": "Medical"
                  },
                  {
                    "value": "Rescue"
                  },
                  {
                    "value": "Structural"
                  },
                  {
                    "value": "Transportation"
                  },
                  {
                    "value": "Utility"
                  },
                  {
                    "value": "Weather"
                  },
                  {
                    "value": "Other"
                  }
                ]
              },
              {
                "id": "borough",
                "label": "Borough",
                "logicalType": "SUGGESTED_FROM",
                "possibleValues": [
                  {
                    "value": "Brooklyn"
                  },
                  {
                    "value": "Bronx"
                  },
                  {
                    "value": "Manhattan"
                  },
                  {
                    "value": "New York"
                  },
                  {
                    "value": "Queens"
                  },
                  {
                    "value": "Staten Island"
                  }
                ]
              }
            ]
          }
        ]
      }
    }
  ]
}
